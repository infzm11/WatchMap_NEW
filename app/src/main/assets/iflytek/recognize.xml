<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="220dp" android:layout_gravity="center" android:gravity="center"
    android:orientation="vertical" android:tag="container">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="top" android:layout_margin="10dp" android:gravity="center_horizontal"
        android:singleLine="true" android:tag="title"
        android:textColor="#ff188ad1" android:textSize="24sp" />
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_marginBottom="20dp" android:layout_weight="1" android:tag="waiting">
        <View android:layout_width="150dp" android:layout_height="150dp" android:layout_gravity="center"
            android:gravity="center" android:tag="control" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"
            android:gravity="center" android:singleLine="true" android:tag="tips"
            android:textColor="#ff65c4ff" android:textSize="24sp" />
    </FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_gravity="center" android:layout_marginTop="40dp" android:layout_marginBottom="20dp"
        android:layout_weight="1" android:gravity="center"
        android:orientation="vertical" android:tag="error"
        android:visibility="gone">
        <View android:layout_width="90dp" android:layout_height="70dp" android:layout_gravity="center"
            android:gravity="center" android:tag="errview" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
            android:gravity="center_horizontal" android:tag="errtxt"
            android:textColor="#ffe7e7e7" android:textSize="20sp" />
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
        android:autoLink="all" android:gravity="center_horizontal"
        android:paddingBottom="2dp" android:tag="textlink"
        android:textColor="#ffb4b4b4" android:textSize="16sp"
        android:textStyle="italic" />
</LinearLayout>
